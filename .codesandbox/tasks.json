{
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install --ignore-script"
    }
  ],
  "tasks": {
    "dev": {
      "name": "dev",
      "command": "pnpm dev",
      "runAtStart": false
    },
    "build": {
      "name": "build",
      "command": "pnpm build",
      "runAtStart": false
    },
    "start": {
      "name": "start",
      "command": "pnpm start",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint",
      "runAtStart": false
    },
    "build:launch": {
      "name": "build:launch",
      "command": "pnpm build && pnpm start",
      "runAtStart": true
    }
  }
}
